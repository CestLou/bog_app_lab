<%- model_class = Creature -%>
<% if flash.any? %>
	<% flash.each do |key,message| %>
		<div class="alert alert-<%= key %>"> <%= message %> </div>
	<%end%>
<%end%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.human_attribute_name(:name) %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @creature.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @creature.desc %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              creatures_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_creature_path(@creature), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              creature_path(@creature),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>


<h1>Results <small><%= @search %></small></h1>

<% @results.each do |photo| %>
<%= link_to image_tag(photo.first), photo.last %>

<% end %>
